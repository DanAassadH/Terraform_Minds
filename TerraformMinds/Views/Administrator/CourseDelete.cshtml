@model TerraformMinds.Models.Course

@{
    ViewData["Title"] = "Delete";
}

@if (ViewBag.Message != null)
{
    @*TERNARY EXPRESSION*@
    <p class="alert-@(ViewBag.Error != null ? "danger" : "success")">@(ViewBag.Message)</p>

    if (ViewBag.Error != null)
    {
        <ul>
            @foreach (Exception e in ViewBag.Exception.ValidationExceptions)
            {
                <li class="alert-danger">@(e.Message)</li>
            }
        </ul>
    }
}

<ul>
    <li>
        <a asp-action="AdministratorDashboard" asp-controller="Administrator">Main</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="InstructorList">Instructor List</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="StudentList">Student List</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="CourseList">Course List</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="CourseCreate">Create Course</a>
    </li>
    <li>
        <a asp-action="Signout" asp-controller="SignIn">Signout</a>
    </li>

</ul>

<h1>Delete Course</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Course Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            Subject:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            Start Date:
        </dt>
        <dd class="col-sm-10">
            @if (Model.StartDate.HasValue)
            {
                @Html.DisplayFor(model => model.StartDate)
            }
            else
            {
                @Html.Raw(@"TBA");
            }
        </dd>
        <dt class="col-sm-2">
            End Date:
        </dt>
        <dd class="col-sm-10">
            @if (Model.EndDate.HasValue)
            {
                @Html.DisplayFor(model => model.EndDate)
            }
            else
            {
                @Html.Raw(@"TBA");
            }
        </dd>
        <dt class="col-sm-2">
            Course Description:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseDescription)
        </dd>
        <dt class="col-sm-2">
            Grade Level:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GradeLevel)
        </dd>
        <dt class="col-sm-2">
            Current Capacity:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentCapacity)
        </dd>
        <dt class="col-sm-2">
            Max Capacity:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>
    </dl>

    <form asp-action="CourseDelete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="CourseList">Back to List</a>
    </form>
</div>
