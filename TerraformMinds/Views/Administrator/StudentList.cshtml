
@{
    ViewData["Title"] = "Student List";
}

<ul>
    <li>
        <a asp-action="AdministratorDashboard" asp-controller="Administrator">Main</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="InstructorList">Instructor List</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="StudentList">Student List</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="CourseList">Course List</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="CourseCreate">Create Course</a>
    </li>
    <li>
        <a asp-action="Signout" asp-controller="SignIn">Signout</a>
    </li>

</ul>

<h1>Student List</h1>

@if (ViewBag.Students != null && ViewBag.Students.Count > 0)
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Student ID</th>
                <th>Full Name</th>
                <th>E-Mail</th>
                <th>Join Date</th>
                <th>Action</th>
            </tr>
            @foreach (Student student in ViewBag.Students)
            {
                <tr>
                    <td>@(student.ID)</td>
                    <td>@(student.User.FirstName + " " + student.User.LastName)</td>
                    <td>@(student.User.EMail)</td>
                    <td>@(student.User.JoinDate.ToLongDateString())</td>
                    <td><a href="/Administrator/StudentDetail?id=@(student.ID)">View Details</a></td>
                </tr>
            }
    </table>
}

else
{
    <p>There are no students found</p>
}

