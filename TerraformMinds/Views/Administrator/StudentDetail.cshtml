
@{
    ViewData["Title"] = "Details";
}

<ul>
    <li>
        <a asp-action="AdministratorDashboard" asp-controller="Administrator">Main</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="InstructorList">Instructor List</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="StudentList">Student List</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="CourseList">Course List</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Administrator" asp-action="CourseCreate">Create Course</a>
    </li>
    <li>
        <a asp-action="Signout" asp-controller="SignIn">Signout</a>
    </li>

</ul>

@if (ViewBag.Error != null)
{
    <ul>
        @foreach (Exception e in ViewBag.Exception.ValidationExceptions)
        {
            <li class="alert-danger">@(e.Message)</li>
        }
    </ul>
}

@if (ViewBag.Student != null)
{
    <h1>Course List for @(ViewBag.Student.FirstName + " " + ViewBag.Student.LastName)</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Course ID</th>
                <th>Instructor</th>
                <th>Course Name</th>
                <th>Subject</th>
                <th>Course Description</th>
                <th>Grade Level</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
            @foreach (Course studentCourses in ViewBag.StudentCourses)
            {
                <tr>
                    <td>@(studentCourses.ID)</td>
                    <td>@(studentCourses.User.FirstName + " " + studentCourses.User.LastName)</td>
                    <td>@(studentCourses.CourseName)</td>
                    <td>@(studentCourses.Subject)</td>
                    <td>@(studentCourses.CourseDescription)</td>
                    <td>@(studentCourses.GradeLevel)</td>
                    <td>@((studentCourses.StartDate == null ? "TBA" : ((DateTime)studentCourses.StartDate).ToLongDateString()))</td>
                    <td>@((studentCourses.EndDate == null ? "TBA" : ((DateTime)studentCourses.EndDate).ToLongDateString()))</td>
                </tr>
            }
        </thead>
    </table>
    <p>Return to <a asp-action="StudentList" asp-controller="Administrator">Student List</a></p>
}
else
{
    <h1>Details</h1>
    <p>An error occured trying to populate student data. <a asp-action="StudentList" asp-controller="Administrator">Click here to return to the student list</a>.</p>
}