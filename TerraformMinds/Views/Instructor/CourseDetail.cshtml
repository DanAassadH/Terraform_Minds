
@{
    ViewData["Title"] = "CourseDetail";
}

<h1>CourseDetail</h1>

<ul>
    <li>
        <a asp-action="InstructorDashboard" asp-controller="Instructor">
            Main
        </a>
    </li>
    <li>
        <a asp-controller="Instructor" asp-action="CourseList"
           asp-route-id="@User.Identity.Name">
            My Courses
        </a>
    </li>
    <li>
        <a asp-action="Signout" asp-controller="SignIn">
            Signout
        </a>
    </li>

</ul>

@if (ViewBag.Error != null)
{
    <ul>
        @foreach (Exception e in ViewBag.Exception.ValidationExceptions)
        {
            <li class="alert-danger">@(e.Message)</li>
        }
    </ul>
}





@if (ViewBag.SingleCourseDetail != null)
{

    <div class="card">

        <img class="card-img-top" src="..." alt="Card image cap">

        <div class="card-body">
            <h4 class="card-title">@(ViewBag.SingleCourseDetail.CourseName)</h4>
            <h5>@(ViewBag.SingleCourseDetail.Subject)</h5>
            <p class="card-text">@(ViewBag.SingleCourseDetail.CourseDescription)</p>
            <p class="card-text">
                @(ViewBag.SingleCourseDetail.GradeLevel)
            </p>
            <p class="card-text">
                @((ViewBag.SingleCourseDetail.StartDate == null ? "TBA" : ((DateTime)ViewBag.SingleCourseDetail.StartDate).ToLongDateString()))
            </p>
            <p class="card-text">
                @((ViewBag.SingleCourseDetail.EndDate == null ? "TBA" : ((DateTime)ViewBag.SingleCourseDetail.EndDate).ToLongDateString()))
            </p>

            @if (ViewBag.SingleCourseDetail.CurrentCapacity == ViewBag.SingleCourseDetail.MaxCapacity)
            {
                <p>FULL</p>
            }
            else
            {
                <p>@(ViewBag.SingleCourseDetail.CurrentCapacity + "/" + ViewBag.SingleCourseDetail.MaxCapacity)</p>
            }


        </div>
    </div>
}
    else
    {
        <p>Course Details Not Available. Please head back to Main and try again</p>
    }





