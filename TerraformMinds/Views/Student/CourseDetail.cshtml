@{
    ViewData["Title"] = "CourseDetail";
}

<h1>Course Detail For Student</h1>

<ul>
    <li>
        <a asp-action="StudentDashboard" asp-controller="Student">
            Main
        </a>
    </li>
    <li>
        <a asp-controller="Student" asp-action="CourseList">
            My Courses
        </a>
    </li>
    <li>
        <a asp-action="Signout" asp-controller="SignIn">
            Signout
        </a>
    </li>

</ul>

@if (ViewBag.Error != null)
{
    <ul>
        @foreach (Exception e in ViewBag.Exception.ValidationExceptions)
        {
            <li class="alert-danger">@(e.Message)</li>
        }
    </ul>
}



@*--------------------------------------Details about courseo -------------------------------------------------*@

@if (ViewBag.SingleCourseDetail != null)
{

    <div class="card">

        <img class="card-img-top" src="..." alt="Card image cap">

        <div class="card-body">
            <h4 class="card-title">@(ViewBag.SingleCourseDetail.CourseName)</h4>
            <h5>Subject : @(ViewBag.SingleCourseDetail.Subject)</h5>
            <strong> Course Description : </strong>
            <p class="card-text">@(ViewBag.SingleCourseDetail.CourseDescription)</p>
            <strong> Grade </strong>
            <p class="card-text">
                @(ViewBag.SingleCourseDetail.GradeLevel)
            </p>

            <p class="card-text">
                <strong>Start Date : </strong>
                @((ViewBag.SingleCourseDetail.StartDate == null ? "TBA" : ((DateTime)ViewBag.SingleCourseDetail.StartDate).ToLongDateString()))
            </p>
            <p class="card-text">
                <strong>End Date : </strong>
                @((ViewBag.SingleCourseDetail.EndDate == null ? "TBA" : ((DateTime)ViewBag.SingleCourseDetail.EndDate).ToLongDateString()))
            </p>

        </div>
    </div>

    @*-------------------------------------- Assignments Info -------------------------------------------------*@

    <h5> Assignments in this course</h5>

    @if (ViewBag.AssignmentsForCourse != null && ViewBag.AssignmentsForCourse.Count > 0)
    {
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Question</th>
                    <th>Due Date</th>
                    <th>Total Score</th>
                    <th>Actions</th>
                </tr>
                @foreach (Assignment assignment in ViewBag.AssignmentsForCourse)
                {
            <tr>
                <td>@assignment.Question</td>
                <td>@assignment.DueDate.ToLongDateString()</td>
                <td>@assignment.TotalScore</td>

                 
            <td>
                     @if (ViewBag.SubmittedIds.Contains(assignment.ID) )
                {
                    <p>Submitted</p>
                }
                else
                {
                    <a asp-controller="Student" asp-action="AssignmentAttempt" asp-route-id="@assignment.ID">Attempt</a>
                }
            </td>
            </tr>
                }
        </table>

    }
    else
    {
        <p><strong>No Assignments for this  course yet</strong></p>
    }

    @*-------------------------------------- Submitted Assignments Info -------------------------------------------------*@

    <h5> Assignments You Have Submitted</h5>

    //  ViewBag.SubmittedAssignments = GetSubmittedAssignments(studentId);

    @if (ViewBag.SubmittedAssignments != null && ViewBag.SubmittedAssignments.Count > 0)
    {
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Question</th>
                    <th>Due Date</th>
                    <th>Total Score</th>
                    <th>Date Submitted</th>
                    <th>Answer</th>
                    <th>Score obtained</th>
                    <th>Remarks</th>
                </tr>
                @foreach (Submit assignment in ViewBag.SubmittedAssignments)
                {
                    <tr>
                        <td>@assignment.Assignment.Question</td>
                        <td>@assignment.Assignment.DueDate.ToLongDateString()</td>
                        <td>@assignment.Assignment.TotalScore</td>

                        <td>@assignment.DateSubmitted.ToLongDateString()</td>
                        <td>@assignment.Answer</td>
                        <td>@assignment.ScoreObtained</td>
                        <td>@assignment.Remarks</td>


                    </tr>
                }
        </table>

    }
    else
    {
        <p><strong>You Havent Submitted any assignment yet</strong></p>
    }



}
else
{
    <p>Course Details Not Available. Please head back to Main and try again</p>
}