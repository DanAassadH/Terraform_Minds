@model TerraformMinds.Models.Submit
@{
    ViewData["Title"] = "AssignmentAttempt";
}

<h1>Assignment Attempt</h1>

<ul>
    <li>
        <a asp-action="StudentDashboard" asp-controller="Student">
            Main
        </a>
    </li>
    <li>
        <a asp-controller="Student" asp-action="CourseList">
            My Courses
        </a>
    </li>
    <li>
        <a asp-action="Signout" asp-controller="SignIn">
            Signout
        </a>
    </li>

</ul>

@if (ViewBag.Error != null)
{
    <ul>
        @foreach (Exception e in ViewBag.Exception.ValidationExceptions)
        {
            <li class="alert-danger">@(e.Message)</li>
        }
    </ul>
}


@if (ViewBag.SubmitYes != true)
{ 
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Question : @(ViewBag.AssignmentDetails.Question) </h4>

        <p class="card-text">Due Date :  @(ViewBag.AssignmentDetails.DueDate)</p>

        <p class="card-text"> Total Score :  @(ViewBag.AssignmentDetails.TotalScore)</p>

    </div>
</div>


<form action="/Student/AssignmentAttempt" method="POST">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="form-group">
        <label for="Answer">Type Your Answer here </label>
        <input asp-for="Answer" class="form-control" placeholder="Answer" data-val="true" data-val-required="Answer is required" data-val-maxlength-max="2000" data-val-maxlength="Email Cannot exceed 2000 characters" />
        <span asp-validation-for="Answer" class="text-danger" data-valmsg-for="Answer" data-valmsg-replace="true"></span>
    </div>

    <input type="text" name="CourseID" value="@(ViewBag.AssignmentDetails.CourseID)" />
    <input type="text" name="id" value="@(ViewBag.AssignmentDetails.ID)" />

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>


</form>
}
else
{
    <p>@(ViewBag.Message)</p>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


