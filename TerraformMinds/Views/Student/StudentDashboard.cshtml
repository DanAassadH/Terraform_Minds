    <div class="border-right border-8 w-auto">

        <div class="list-group list-group-flush">
            <h5><a class="list-group-item list-group-item-action border-0 teal-text">Dashboard</a></h5>

            <a class="list-group-item list-group-item-action border-0 teal-text" asp-action="StudentDashboard" asp-controller="Student">                        <i class="fas fa-house-user"></i> Main</a>

            <a class="list-group-item list-group-item-action border-0 teal-text" asp-controller="Student" asp-action="CourseList" asp-route-id="@User.Identity.Name"><i class="fas fa-book"></i> My Courses</a>

            <hr class="my-4 border-danger">

            <a class="list-group-item list-group-item-action border-0 teal-text" asp-action="Signout" asp-controller="SignIn"><i class="fas fa-sign-out-alt"></i> Sign Out</a>
        </div>
    </div>

    <!-- End sidebar -->
  
    
    <!-- Start main Content -->
 
    <main class="">
      

            <div class="text-right mt-4">

                <h3 >Welcome @ViewBag.UserInformation.FirstName @ViewBag.UserInformation.FirstName</h3>

            </div>
          
            <div class="jumbotron bg-white">
                <h1 class="display-4">Welcome to your Terraform Minds student dashboard</h1>

                <hr class="my-4">
                <p>Select any option from the menu to get started</p>

            </div>

            @if (ViewBag.Error != null)
            {
                <ul class="list-group">
                    @foreach (Exception e in ViewBag.Exception.ValidationExceptions)
                    {
                        <li class="list-group-item list-group-item-danger">@(e.Message)</li>
                    }
                </ul>
            }

    </main>

    <!-- End Main Content -->

</div>














